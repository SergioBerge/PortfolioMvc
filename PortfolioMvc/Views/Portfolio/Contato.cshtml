@{
    ViewData["Title"] = "Contato";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Form</title>
    <!-- Add Bootstrap CSS link if not already included -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.7.3/dist/css/bootstrap.min.css">
    <!-- Add Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Add some basic styling for better appearance */
        .social-buttons {
            margin-top: 20px;
        }

        .social-button {
            margin-right: 10px;
        }

        /* Center the form elements */
        .centered-form {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 80vh;
        }

        /* Add some spacing between form elements */
        .form-element {
            margin-bottom: 10px;
        }

        /* Style the form container with rounded borders */
        .form-container {
            background-color: #343a40; /* Dark color */
            color: #ffffff; /* Light text color */
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-control {
            margin-bottom: 5px;
        }

        .btn-primary {
            margin-top: 10px;
        }
    </style>
</head>
<body>

    <div style="text-align: center;">
        <img src="~/imagens/Email.jpg" width="100" height="100" alt="Email Image" />
    </div>

    <h1 class="text-center">Formulário de Contato</h1>

    <div class="centered-form">
        <!-- Form container with rounded borders -->
        <div class="form-container w-50">
            <form id="contactForm" asp-controller="Portfolio" asp-action="Contato">
                <div class="mb-3 form-element">
                    <label for="nome" class="form-label">Nome</label>
                    <input type="text" class="form-control" id="nome" name="nome" placeholder="Informe o nome" />
                </div>
                <div class="mb-3 form-element">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="nome@email.com" />
                </div>
                <div class="mb-3 form-element">
                    <label for="mensagem" class="form-label">Mensagem</label>
                    <textarea class="form-control" id="mensagem" name="mensagem" rows="4"></textarea>
                </div>
                <button type="button" class="btn btn-primary" onclick="sendWhatsAppMessage()">Enviar</button>
            </form>
        </div>
    </div>
    <!-- Social Media Buttons with Logos -->
    <div class="social-buttons text-center">
        <!-- GitHub Button with Octocat Logo -->
        <a class="btn btn-dark social-button" href="https://github.com/SergioBerge" target="_blank">
            <i class="fab fa-github"></i>
        </a>

        <!-- LinkedIn Button with LinkedIn Logo -->
        <a class="btn btn-primary social-button" href="https://www.linkedin.com/in/sergio-berg%C3%AA-438612268/" target="_blank">
            <i class="fab fa-linkedin"></i>
        </a>

        <!-- WhatsApp Button with WhatsApp Logo -->
        <a class="btn btn-success social-button" href="https://web.whatsapp.com/send?phone=559874009468" target="_blank">
            <i class="fab fa-whatsapp"></i>
        </a>

        <!-- Instagram Button with Instagram Logo -->
        <a class="btn btn-danger social-button" href="https://www.instagram.com/sergio_berge/" target="_blank">
            <i class="fab fa-instagram"></i>
        </a>
    </div>

    <!-- Add Bootstrap JS and Popper.js scripts if not already included -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.7.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JavaScript function to send WhatsApp message -->
    <script>
        function sendWhatsAppMessage() {
            // Get form data
            var nome = document.getElementById("nome").value;
            var email = document.getElementById("email").value;
            var mensagem = document.getElementById("mensagem").value;

            // Construct WhatsApp message
            var whatsappMessage = "Olá, sou " + nome + ". Meu email é " + email + ". Mensagem: " + mensagem;

            // Open WhatsApp window with pre-filled message
            window.open("https://wa.me/559874009468?text=" + encodeURIComponent(whatsappMessage), '_blank');
        }
    </script>

</body>
</html>
